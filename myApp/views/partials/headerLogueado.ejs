<!-- Header -->
<header class="main-header">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-5 col-md-2">
				<a href="/" class="main-header_home-link">
					<img src="/images/logo.png">
				</a>
			</div>

			<div class="col-7 col-md-6">
				<form action="/search-results" method="GET" class="search-form">
					<input type="text" name="search" placeholder="Search for products, brands, and more"
						class="search-form_input">
					<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
				</form>
			</div>

			<div class="col-12 col-md-4">
				<a class="main-header_credit-link">
					<i class="fas fa-hand-holding-usd"></i>
					Your favorite sneakers shop
				</a>
			</div>
		</div>

		<button class="btn-toggle-navbar">
			<i class="fas fa-bars"></i>
		</button>

		<nav class="main-navbar">
			<ul class="left-navbar">
				<li><a href="/">All shoes</a></li>
				<li><a href="/products/add">Add shoes</a></li>
			</ul>

			<ul class="right-navbar">
				<li><a href="/profile/<%=locals.user.id%> "> Bienvenido <%=locals.user.nombre%> <%=locals.user.apellido%>! 
					<i class="fas fa-user"></i>
					</a>
				</li>
				<li>
					<form action="/profile/logout" method="get">
						<button class="logout" type="submit">
							Log out <i class="fas fa-sign-in-alt"></i>
						</button>
					</form>
				</li>
			</ul>
		</nav>
	</div>
</header>
<!-- /Header -->