<!DOCTYPE html>
<html lang="es">
	
<!-- Include Head -->

<%- include('./partials/head')  %> 
<body>

	<!-- Include Header -->
	<%if (logueado){%>
		<%- include("partials/headerLogueado.ejs") %>
		<%} else { %>
		<%- include("partials/headerNoLogueado.ejs") %>
	<% } %>

	<!-- Banner -->
	<div class="banner">
		<img src="images/bannerJustHype.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->


	<!-- acá voy a hacer un bucle que recorra el array de productos y muestre un div por cada producto -->
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">New Releases</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < products.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products">
						<figure class="product-box_image">
							<img src="<%= products[i].image %>"  alt="shoes">
						</figure>
						<article class="product-box_data">
							<h2> <%= products[i].model  %>  </h2>
							<p> <%= products[i].description  %> </p>
							<p>Comments: 5</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>


	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Most popular</h2>
			</div>
			
			<% for (let i = 0; i < mostPopular.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products">
							<figure class="product-box_image">
								<img src="<%= mostPopular[i].image %>"  alt="shoes">
							</figure>
							<article class="product-box_data">
								<h2> <%= mostPopular[i].model  %>  </h2>
								<p> <%= mostPopular[i].description  %> </p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
				<% } %>	
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer.ejs')  %> 
	
</body>	
</html>