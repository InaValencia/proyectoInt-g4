<!DOCTYPE html>
<html lang="es">
	
<!-- Include Head -->

<%- include('./partials/head')  %> 

<body>

	<!-- Include Header -->
	<% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado')  %> 
	<% } else{%>
			<%- include('./partials/headerNoLogueado')  %> 
	<% } %> 

	<!-- Banner -->
	<div class="banner">
		<img src="images/bannerJustHype.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- acÃ¡ voy a hacer un bucle que recorra el array de productos y muestre un div por cada producto -->
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">New Releases</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < product.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/id/<%= product[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= product[i].photo %>"  alt="shoes">
						</figure>
						<article class="product-box_data">
							<h2> <%= product[i].model  %>  </h2>
							<p> <%= product[i].description  %> </p>
							<p>Creator: <%= product[i].user.nombre %> <%= product[i].user.apellido %> </p>

						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	
	<!-- footer -->
	<%- include('./partials/footer.ejs')  %> 
</body>	
</html>