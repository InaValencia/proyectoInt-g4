<!DOCTYPE html>
<html lang="es">
	
<!-- Include Head -->

<%- include('./partials/head')  %> 
<body>

	<!-- Include Header -->
<%- include('./partials/headerNoLogueado')  %> 


	<!-- Banner -->
	<div class="banner">
		<img src="images/homeBanner.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->


	<!-- ac치 voy a hacer un bucle que recorra el array de productos y muestre un div por cada producto -->
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < products.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products">
						<figure class="product-box_image">
							<img src="<%= products[i].image %>"  alt="shoes">
						</figure>
						<article class="product-box_data">
							<h2> <%= products[i].model  %>  </h2>
							<p> <%= products[i].description  %> </p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>


	<!-- /Novedades -->
	<!-- M치s comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">M치s comentados</h2>
			</div>
			
			<% for (let i = 0; i < products.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products">
							<figure class="product-box_image">
								<img src="<%= products[i].image %>"  alt="shoes">
							</figure>
							<article class="product-box_data">
								<h2> <%= products[i].model  %>  </h2>
								<p> <%= products[i].description  %> </p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
				<% } %>	
		</div>
	</div>
	<!-- /M치s comentados -->


	<!-- footer -->
	<%- include('./partials/footer.ejs')  %> 
	
</body>	
</html>