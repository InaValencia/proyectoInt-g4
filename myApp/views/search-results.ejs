<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('./partials/head')  %> 

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado')  %> 
			<% } else{%>
					<%- include('./partials/headerNoLogueado')  %> 
	<% } %> 
			



	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">

				<% if (product.length != 0) { %>
				<h2 class="products-title"> Browse results for: </h2>

				<% for (let i = 0; i < product.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/id/<%= product[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= product[i].photo %>"  alt="shoes">
								</figure>
								<article class="product-box_data">
									<h2> <%= product[i].model  %>  </h2>
									<p> <%= product[i].description  %> </p>
									<p>Created by <%= product[i].user.nombre %> <%= product[i].user.apellido %> </p>
								</article>
							</a>
						</section>
					</div>
					<% } %>
					<% }  else {  %>
						<h2 class="products-title">No se encontraron resultados para tu busqueda</h2>

					 <% } %> 
	
		</div>

	</div>
	
	

	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>

</html>