<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('./partials/head')  %> 

<body>
	<!-- Header -->
	<%if (logueado){%>
		<%- include("partials/headerLogueado.ejs") %>
		<%} else { %>
		<%- include("partials/headerNoLogueado.ejs") %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Add product</h2>
			</div>
		<!-- form para add product --> 

		<div class="wrapper fadeInDown">
			<div id="formContent">
			  <!-- Tabs Titles -->
			  <h2 class="active"> Add Product  </h2>

			  <!-- Icon -->
		  
			  <form action="/products/store" method="POST">
				<label for="model" class= "letraForm"> Model: </label>
				<input type="text" name="model" placeholder= "name of the product" value=""> 
				<hr>
				<label for="description" class= "letraForm"> Description </label>
				<input type="text" name="description" placeholder="description">
				<hr>
				<label for="photo" class= "letraForm"> Image of the product: </label>
				<input type="file" name="photo" placeholder= "photo" value="">
				<hr>
				<input type="submit" class="fadeIn fourth" value="ADD">
			  </form>
	
			</div>
		  </div>
			


	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>

</html>